# Notion API Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Your Notion integration token (get from https://developers.notion.com/)
NOTION_TOKEN=secret_your_notion_integration_token_here

# Page ID where clipboard dumps will be saved
# Get this by opening the page in Notion and copying the URL
# Example: https://notion.so/My-Info-Dump-abc123def456 -> abc123def456
INFO_DUMP_PAGE_ID=your_info_dump_page_id_here

# Database ID for your task database
# Get this by opening the database in Notion and copying the URL
TASK_DATABASE_ID=your_task_database_id_here

# Parent page ID where meeting notes will be created
MEETING_NOTES_PARENT_ID=your_meeting_notes_parent_id_here

# Parent page ID where daily journal entries will be created
DAILY_JOURNAL_PARENT_ID=your_daily_journal_parent_id_here